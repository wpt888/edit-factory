# Edit Factory - Backend Environment Variables
# Copy this file to .env and fill in your values

# ======================
# Supabase Configuration (Required)
# ======================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# JWT Secret for token verification
# Get this from: Supabase Dashboard > Settings > API > JWT Settings > JWT Secret
SUPABASE_JWT_SECRET=your-jwt-secret

# ======================
# AI Services (Required)
# ======================
GEMINI_API_KEY=your-gemini-api-key

# ElevenLabs TTS
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_VOICE_ID=your-voice-id

# ======================
# CORS Configuration
# ======================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://editai.obsid.ro

# ======================
# Server Configuration
# ======================
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Paths (adjust for your system)
INPUT_DIR=./input
OUTPUT_DIR=./output
LOGS_DIR=./logs

# ======================
# Optional Services
# ======================
# Redis for caching/job queue
# REDIS_URL=redis://localhost:6379/0

# Google Drive integration
# GOOGLE_DRIVE_FOLDER_ID=your-folder-id
# GOOGLE_CREDENTIALS_PATH=./credentials/google_service_account.json

# fal.ai TTS alternative
# FAL_API_KEY=your-fal-api-key

# Postiz social media publishing
# POSTIZ_API_URL=https://app.postiz.com/api
# POSTIZ_API_KEY=your-postiz-api-key
